<odoo>
    <data>
        <record id="view_contract_type_form" model="ir.ui.view">
            <field name="name">hr.contract.type.form</field>
            <field name="model">hr.contract.type</field>
            <field name="arch" type="xml">
                <form string="Contract Type Form">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="view_contrcat_type_tree" model="ir.ui.view">
            <field name="name">hr.contract.type.tree</field>
            <field name="model">hr.contract.type</field>
            <field name="arch" type="xml">
                <tree string="Contract Type Tree">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        
        <record id="open_module_contract_tree_location" model="ir.actions.act_window">
            <field name="name">Contract Types</field>
            <field name="res_model">hr.contract.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Work Location
              </p><p>
                Odoo's Work location is used to manage loactions of work for each employee.
              </p>
            </field>
        </record>
        
        <menuitem
                id="menu_hr_contract_type_tree"
                action="open_module_contract_tree_location"
                parent="hr.menu_human_resources_configuration"
                sequence="4"
                groups="base.group_user"/>
    </data>
</odoo>